<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.AdSpy.dao.UserDao">

    <!--设置domain类和数据库中表的字段一一对应-->
   <resultMap type="com.AdSpy.entity.User" id="BaseUser">
       <id column="id" property="id" jdbcType="INTEGER" />
       <result column="username" property="username" jdbcType="VARCHAR" />
       <result column="password" property="password" jdbcType="VARCHAR" />
       <!--延迟加载-->
       <collection property="ads" column="id" ofType="Advertisement"  select="com.AdSpy.dao.AdDao.findAdByCreatorId"/>
   </resultMap>

    <!-- 查询所有记录 -->
    <select id="findAll" resultMap="BaseUser">
        SELECT * FROM users;
    </select>

    <!--插入记录-->
    <insert id = "saveUser" parameterType="com.AdSpy.entity.User">
        <selectKey keyProperty="id" keyColumn="id" resultType="int" order="AFTER">
            select last_insert_id();
        </selectKey>
        insert into users(username, password)  values (#{username},#{password});
    </insert>
    <!-- 查询单个记录 -->

    <select id="selectUsersByUsername" parameterType="java.lang.String"  resultType="com.AdSpy.entity.User">
        SELECT * FROM users WHERE username=#{username}
    </select>

    <update id = "updateUser" parameterType="com.AdSpy.entity.User">
        update users set password = #{password} where username = #{username};
    </update>

    <delete id = "deleteUser" parameterType="java.lang.Integer" >
        delete from users where id = #{uid};
    </delete>

    <select id="findById" parameterType="java.lang.Integer" resultType="com.AdSpy.entity.User">
        select * from users where id = #{uid};
    </select>

    <select id ="findTotal" resultType="int">
        select count(id) from users;
    </select>
</mapper>